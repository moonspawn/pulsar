<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/thread.css" type="text/css">
    <% include partials/header.ejs %>
    <title>Document</title>
</head>
<body>
    <div class="grid-container">

        <!--Navbar-->
        <div class="header">
            <% include partials/search.ejs %>
        </div>
        <!--/.Navbar-->
        <div class="main">
            <div class="card">
                    <div class="card-header">
                        Question
                    </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                        <p id='question'><%= question %></p>
                        <footer class="blockquote-footer"><cite title="Source Title"><%= username %></cite></footer>
                        <div class='row'>
                            <h5 id='upvotes' class='col-md-0'><%= upvotes %></h5>
                            <span class="upvote"> </span>
                        </div>
                        <div class='row'>
                            <h5 id='downvotes' class='col-md-0'><%= downvotes %></h5>
                            <span class="downvote"> </span>
                        </div>
                        <a id="reply" href="" class="btn btn-info float-right btn-sm" role="button">Reply</a>  
                        </blockquote>
                        
                    </div>
                </div>

                <h3>Answers</h3>
                <div class="Answers">
                    <% if(posts) {%>
                        <% posts.forEach((post) => { %>
                            <div class="cards">
                                <div class="card-body">
                                    <blockquote class="blockquote mb-0">
                                    <p id='question'><%= post.post.answer %></p>
                                    <footer class="blockquote-footer"><cite title="Source Title"></cite></footer>
                                    <div class='row'>
                                        <h5 id='upvotes' class='col-md-0'><%= post.post.upvotes %></h5>
                                        <span class="upvote"> </span>
                                    </div>
                                    <div class='row'>
                                        <h5 id='downvotes' class='col-md-0'><%= post.post.downvotes %></h5>
                                        <span class="downvote"> </span>
                                    </div>
                                    </blockquote>
                                </div>
                            </div>

                        <% }) %>
                    <% } else {%>
                        <h4>No answers Yet</h4>
                    <% } %>
                    

                </div>
            </div>

            



            
           
               
    
        </div>
        
    <script src="/js/thread.js"></script>
    <% include partials/footer.ejs %>
</body>
</html>